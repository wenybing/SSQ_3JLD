<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <!--获取省份的servlet-->
    <servlet>
        <servlet-name>ProvinceServlet</servlet-name>
        <servlet-class>com.yr.demo.servlet.ProvinceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProvinceServlet</servlet-name>
        <url-pattern>/ProvinceServlet</url-pattern>
    </servlet-mapping>
    <!--获取城市的servlet-->
    <servlet>
        <servlet-name>CityServlet</servlet-name>
        <servlet-class>com.yr.demo.servlet.CityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CityServlet</servlet-name>
        <url-pattern>/CityServlet</url-pattern>
    </servlet-mapping>
    <!--获取区县的servlet-->
    <servlet>
        <servlet-name>DistrictServlet</servlet-name>
        <servlet-class>com.yr.demo.servlet.DistrictServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DistrictServlet</servlet-name>
        <url-pattern>/DistrictServlet</url-pattern>
    </servlet-mapping>
</web-app>
